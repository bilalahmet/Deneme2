@model Deneme2.Models.Uye

@{
    ViewBag.Title = "UyeDelete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3 class="col-md-8">Üyeyi Silmek İstediğinize Emin Misiniz?</h3>
<div>

    <hr />
    <dl class="dl-horizontal col-md-8">
        <dt>
            Yetki:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
        </dd>

        <dt>
            Kullanıcı Adı:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>

        <dt>
           E-Mail:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Şifre:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sifre)
        </dd>

        <dt>
            Ad Soyad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            Profil Fotoğrafı:
        </dt>

        <dd>
            <img width="200" src="@Model.Foto" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-8">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Geri Dön", "uyeList")
        </div>
    }
</div>
