@model IEnumerable<Deneme2.Models.Uye>

@{
    ViewBag.Title = "uyeList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="col-md-8">Üye Listesi</h2>


<table class="table">
    <tr>
        <th>
            Yetki
        </th>
        <th>
            Kullanıcı Adı
        </th>
        <th>
            E-Mail
        </th>
        <th>
            Şifre
        </th>
        <th>
            Ad - Soyad
        </th>
        <th>
            Fotoğraf
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            <img width="75" src="@item.Foto" />
        </td>
        <td>
            @Html.ActionLink("Makaleleri", "UyeMakales", new { id = item.UyeId }) |
            @Html.ActionLink("Detay", "UyeDetay", new { id = item.UyeId }) |
            @Html.ActionLink("Sil", "UyeDelete", new { id = item.UyeId })
        </td>
    </tr>
}

</table>
